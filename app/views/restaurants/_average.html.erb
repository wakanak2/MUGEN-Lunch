<div class="r-ave_inner">

	<table class="restaurant-ave">
		<thead>
			<th class="th-w30"></th>
			<th class="th-w70"></th>
		</thead>

		<tbody>
			<tr>
				<td>平均評価</td>
				<td>
					<!-- raty星評価 -->
						<div id="star-rate-<%= restaurant.id %>">
							<%= restaurant.restaurant_ave_rate %>
						</div>
						<script>
							$('#star-rate-<%= restaurant.id %>').raty({
							size: 36,
							starOff:  '<%= asset_path('star-off.png') %>',
							starOn : '<%= asset_path('star-on.png') %>',
							starHalf: '<%= asset_path('star-half.png') %>',
							half: true,
							readOnly: true,
							score: <%= restaurant.restaurant_ave_rate %>,
							});
						</script>
					<!-- raty星評価 -->
					</td>
			</tr>

			<tr>
				<td>平均単価</td>
				<td><%= restaurant.posts.average(:price).to_f.round(-1) %>円</td>
			</tr>

			<tr>
				<td>平均提供スピード</td>
				<td><%= restaurant.posts.average(:time).to_f.round(0) %>分</td>
			</tr>

		</tbody>
	</table>
</div>