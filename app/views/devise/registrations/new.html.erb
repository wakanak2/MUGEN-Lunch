<section class="inner">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <table class="user-info user-form">
      <thead>
        <th></th>
        <th></th>
       </thead>

      <tbody>
        <tr>
            <td><%= f.label :user_name, "ユーザ名" %></td>
            <td><%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", placeholder:"yamataro", class: "user-form" %></td>
        </tr>

        <tr>
            <td><%= f.label :name, "名前（漢字）" %></td>
            <td><%= f.text_field :name_kanji, autofocus: true, autocomplete: "name", placeholder:"山田太郎", class: "user-form" %></td>
        </tr>

        <tr>
          <td><%= f.label :name_kana, "名前（カナ）" %></td>
          <td><%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana", placeholder:"ヤマダタロウ", class: "user-form" %></td>
        </tr>

        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"yamada@exmple.com", class: "user-form" %></td>
        </tr>

        <tr>
          <td><%= f.label :password, "パスワード（#{@minimum_password_length}文字以上）" %></td>
          <td><%= f.password_field :password, autocomplete: "new-password", class: "user-form" %></td>
        </tr>

        <tr>
          <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user-form" %></td>
        </tr>

        <tr>
          <td colspan="2"><%= f.submit "新規登録" %></td>
        </tr>
    </table>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
